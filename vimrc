set autoindent
set backspace=""
set backupdir=~/.config/vim/backups,.
set cursorline
set formatoptions+=j  " Remove comment leader when joining lines.
set hidden
set nohlsearch
set noincsearch
set noruler
set noshowmode
set scrolloff=1
set shiftwidth=0  " 'shiftwidth' follows 'tabstop'
set undolevels=0  " Golf mode.

colorscheme jfox
